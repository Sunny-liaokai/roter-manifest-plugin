{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "lib": ["ES2017", "dom"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
